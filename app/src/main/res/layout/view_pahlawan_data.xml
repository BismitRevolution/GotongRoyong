<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_data_client"
        android:layout_width="@dimen/campaign_pic"
        android:layout_height="@dimen/campaign_pic"
        android:layout_below="@id/data_title"
        android:layout_marginStart="@dimen/md_padding"
        android:layout_marginTop="@dimen/base_padding"
        android:src="@drawable/logo_placeholder"/>

    <TextView
        android:id="@+id/tv_data_client"
        android:layout_width="match_parent"
        android:layout_height="@dimen/campaign_pic"
        android:layout_margin="@dimen/base_padding"
        android:layout_below="@id/data_title"
        android:layout_toEndOf="@id/img_data_client"
        android:layout_toStartOf="@id/img_verified"
        android:textSize="@dimen/pahlawan_client"
        android:textStyle="bold"
        android:text="@string/load_retrieve"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/img_verified"
        android:layout_width="@dimen/campaign_pic"
        android:layout_height="@dimen/campaign_pic"
        android:layout_marginEnd="@dimen/md_padding"
        android:layout_marginTop="@dimen/base_padding"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_action_verified"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/base_padding"
        android:layout_below="@id/img_data_client"
        android:layout_gravity="center_vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/base_padding"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pahlawan_data_donasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/load_number"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/pahlawan_counter_data"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/campaign_donasi"
                android:textSize="@dimen/pahlawan_data_name"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/base_padding"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pahlawan_data_campaign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/pahlawan_counter_data"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/pahlawan_campaign"
                android:textSize="@dimen/pahlawan_data_name"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_weight="2">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/base_padding"
                android:src="@drawable/facebook_logo"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/base_padding"
                android:src="@drawable/twitter_logo"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/base_padding"
                android:src="@drawable/instagram_logo"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:layout_alignParentBottom="true"
        android:background="@color/baseGray"/>
</RelativeLayout>
